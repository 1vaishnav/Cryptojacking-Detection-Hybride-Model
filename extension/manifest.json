{
  "manifest_version": 3,
  "name": "Cryptojacking Monitor",
  "version": "1.0",
  "description": "Monitors open tabs and sends data to local server for analysis.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["http://localhost:3000/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Cryptojacking Monitor",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
